@model foursquare.Models.HomeModel
@{
    ViewBag.Title = "Bio";
    Layout = "~/Views/Shared/_Secondary_Layout.cshtml";
}


<section class="bioPage">
    <div class="container">
        <div class="row bioPageContent">
            <div class="col-xs-12">
                <a href="#" class="pull-right" onclick="window.close();">
                    <img src="http://magiccampaign.com/img/cd-icon-close-mobile.svg">
                </a>
            </div>
            <div class="col-xs-5">
                <img src="@Model.Member.Picture">
            </div>

            <div class="col-xs-7">
                <h4 class="bioName">@Model.Member.BioName</h4>
                <p class="bioTitle">
                    @Model.Member.BioTitle
                </p>
                @Html.Raw(@Model.Member.Bio)                
            </div>
        </div>

    </div>
</section>